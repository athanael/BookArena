<%= simple_form_for @arena, url: arenas_path, method: :post do |f| %>
  <%= f.error_notification %>
  <div class="container">
    <div class="form-inputs">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  label: "Nom de votre salle :",
                  input_html: { class: 'form-control', placeholder: 'Entrez le nom de votre arena' } %>

      <%= f.input :capacity,
                  required: true,
                  label: "Capacité totale de votre salle :",
                  input_html: { class: 'form-control', placeholder: 'Entrez la capacité de votre salle', type: 'number' } %>

      <%= f.input :address,
                  required: true,
                  label: "Adresse de votre salle :",
                  input_html: { class: 'form-control', placeholder: 'Entrez votre adresse' } %>

      <%= f.input :price,
                  required: true,
                  label: "Prix pour une prestation :",
                  input_html: { class: 'form-control', placeholder: 'Entrez le prix désiré', type: 'number', min: 0, step: '0.01' } %>

      <%= f.input :description,
                  required: true,
                  label: "Décrivez votre salle :",
                  input_html: { class: 'form-control', placeholder: 'Entrez la description de votre salle', rows: 5 } %>

      <%= f.input :photo,
                  as: :file,
                  required: true,
                  label: "Ajoutez une photo de votre salle :",
                  input_html: { class: 'form-control' } %>
    </div>
    <div class="form-actions mt-4">
      <%= f.button :submit, "Je modifie ma salle !", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
