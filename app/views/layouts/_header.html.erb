<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-around py-3 mb-4 border-bottom">
  <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none" id="logo">
    BookArena
  </a>
  <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
    <li><%= link_to "Arenas", arenas_path , class: "nav-link px-2 link-secondary" %></li>
    <li><a href="#" class="nav-link px-2 link-dark"></a></li>
    <li><a href="#" class="nav-link px-2 link-dark"></a></li>
    <li><a href="#" class="nav-link px-2 link-dark"></a></li>
    <li><a href="#" class="nav-link px-2 link-dark"></a></li>
  </ul>

  <div class="col-md-3 text-end d-flex" id="buttons">
    <% if user_signed_in? %>
      <%= button_to "logout", destroy_user_session_path, method: :delete, class:"btn btn-outline-primary me-2" %>
      <button type="button" class="btn btn-primary" id="sign-up"><%=link_to "Profile", edit_user_registration_path%></button>
    <% else %>
      <button type="button" class="btn btn-outline-primary me-2" id="sign-in"><%=link_to "Login", new_user_session_path%></button>
      <button type="button" class="btn btn-primary" id="sign-up"><%=link_to "Sign-up", new_user_registration_path%></button>
    <% end %>
  </div>
</header>
