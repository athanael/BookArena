<h2 class="text-center">Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: "Email :",
                  input_html: { class: 'form-control mb-3', autocomplete: "email", placeholder: 'Entrez votre email' } %>

      <%= f.input :password,
                  required: true,
                  label: "Mot de passe :",
                  input_html: { class: 'form-control mb-3', autocomplete: "current-password", placeholder: 'Entrez votre mot de passe' } %>

      <%= f.input :remember_me,
                  as: :boolean,
                  label: "Se souvenir de moi",
                  input_html: { class: 'form-check-input' },
                  wrapper_html: { class: 'form-check mb-3' } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions mt-4">
      <%= f.button :submit, "Se connecter", class: "btn btn-primary btn-block" %>
    </div>

    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
