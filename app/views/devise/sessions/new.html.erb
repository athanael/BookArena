<h2 class="text-center">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: "Email",
                input_html: { class: 'form-control', autocomplete: "email", placeholder: 'Enter your email' } %>

    <%= f.input :password,
                required: false,
                label: "Password",
                input_html: { class: 'form-control', autocomplete: "current-password", placeholder: 'Enter your password' } %>

    <%= f.input :remember_me,
                as: :boolean,
                label: "Remember me",
                input_html: { class: 'form-check-input' },
                wrapper_html: { class: 'form-check' } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mt-4">
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
