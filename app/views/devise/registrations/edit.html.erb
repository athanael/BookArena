<h2 class="text-center">Changer mon profil</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <div class="container">
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: "Votre email :",
                  input_html: { class: 'form-control mb-3', placeholder: 'Votre email' } %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Laissez le champ vide si vous ne souhaitez pas le changer",
                  required: false,
                  label: "Nouveau mot de passe :",
                  input_html: { class: 'form-control mb-3', autocomplete: "new-password" } %>

      <%= f.input :password_confirmation,
                  required: false,
                  label: "Confirmez votre nouveau mot de passe :",
                  input_html: { class: 'form-control mb-3', autocomplete: "new-password" } %>

      <%= f.input :current_password,
                  hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications",
                  required: true,
                  label: "Mot de passe actuel :",
                  input_html: { class: 'form-control mb-3', autocomplete: "current-password" } %>
    </div>

    <div class="form-actions mt-4">
      <%= f.button :submit, "Mettre à jour", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>

<div class="container mb-5">
  <div class="mt-5">
    <%= button_to "Supprimer mon compte", registration_path(resource_name), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer votre compte ?" }, class: "btn btn-danger btn-block" %>
  </div>

  <div class="mt-3">
    <%= link_to "Retourner", :back, class: "btn btn-secondary btn-block" %>
  </div>
</div>
