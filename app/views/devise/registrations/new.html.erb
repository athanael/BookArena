<h2 class="text-center">Inscription</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="container">
    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  label: "Votre prénom :",
                  input_html: { class: 'form-control mb-3', placeholder: 'Jean' } %>

      <%= f.input :last_name,
                  required: true,
                  label: "Votre nom de famille :",
                  input_html: { class: 'form-control mb-3', placeholder: 'Gérard' } %>

      <%= f.input :category,
                  required: true,
                  label: "Vous êtes un(e) ?",
                  collection: [['Un(e) artist(e)', 'band'], ['Un(e) Propriétaire de salle' , 'owner']],
                  prompt: 'Choisissez',
                  input_html: { class: 'form-select mb-3' } %>

      <%= f.input :email,
                  required: true,
                  label: "Votre email :",
                  input_html: { class: 'form-control mb-3', autocomplete: "email", placeholder: 'JeanGerard@gmail.com' } %>

      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  label: "Votre mot de passe :",
                  input_html: { class: 'form-control mb-3', autocomplete: "new-password", placeholder: 'Votre mot de passe ici' } %>

      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirmez votre mot de passe :",
                  input_html: { class: 'form-control mb-3', autocomplete: "new-password", placeholder: 'Confirmez votre mot de passe ici' } %>

      <%= f.input :photo,
                  as: :file,
                  required: false,
                  label: "Votre photo de profil :",
                  input_html: { class: 'form-control mb-3' } %>
    </div>

    <div class="form-actions mt-4">
      <%= f.button :submit, "Confirmer l'inscription", class: "btn btn-primary btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
