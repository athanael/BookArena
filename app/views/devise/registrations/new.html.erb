<h2 class="text-center">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="container">
    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  label: "First Name",
                  input_html: { class: 'form-control', placeholder: 'Enter your first name' } %>

      <%= f.input :last_name,
                  required: true,
                  label: "Last Name",
                  input_html: { class: 'form-control', placeholder: 'Enter your last name' } %>

      <%= f.input :category,
                  required: true,
                  label: "Category",
                  collection: ['Band', 'Owner', 'Admin'],
                  prompt: 'Select your category',
                  input_html: { class: 'form-select' } %>

      <%= f.input :email,
                  required: true,
                  label: "Email",
                  input_html: { class: 'form-control', autocomplete: "email", placeholder: 'Enter your email' } %>

      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  label: "Password",
                  input_html: { class: 'form-control', autocomplete: "new-password", placeholder: 'Enter your password' } %>

      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirm Password",
                  input_html: { class: 'form-control', autocomplete: "new-password", placeholder: 'Confirm your password' } %>
    </div>

    <div class="form-actions mt-4">
      <%= f.button :submit, "Confirm !", class: "btn btn-primary btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
